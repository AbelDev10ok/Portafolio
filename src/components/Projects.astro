---
import GitHub from "../icon/Github.astro"
import Tailwind from "../icon/Tailwind.astro"
import React from "../icon/React.astro"
import Spring from "../icon/Spring.astro"
import Postgresql from "../icon/Postgresql.astro"
import Link from "../icon/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  SPRINGBOOT: {
    name: "SpringBoot",
    class: "bg-[#003159] text-white",
    icon: Spring,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-[#003159] text-white",
    icon: Postgresql,
  },
}
const PROJECTS = [
  {
    title: "App para administracion y rentas de botes",
    description:
      "Mi proyecto personal de gestión de alquiler de embarcaciones demuestra mi capacidad para construir APIs RESTful seguras y eficientes, utilizando Spring Security y JWT para la autenticación de usuarios autenticados y con roles.",
    github_frontend: "https://github.com/AbelDev10ok/Front-Boats-Rental",
    github_backend: "https://github.com/AbelDev10ok/Back-Boats-Rental",
    image: "src/assets/rentas.png",
    
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.SPRINGBOOT, TAGS.POSTGRESQL],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, github_frontend, github_backend}) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-2/3">
        <div class="relative flex flex-col h-60 items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img alt="Proyecto rental boats" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
        </div>
      </div>

      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-wrap mb-2 gap-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github_frontend && (
              <LinkButton href={github_frontend}>
                <GitHub class="size-6" />
                Code Frontend
                
              </LinkButton>
            )}
            {github_backend && (
              <LinkButton href={github_backend}>
                <GitHub class="size-6" />
                Code Backend
                
              </LinkButton>
            )}
          </footer>
      </div>
    </div>
  </article>
      ))
    }
</div>



